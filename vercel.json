{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["config/**", ".env"]  
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "server.js",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH"]  
    }
  ],
  "functions": {
    "server.js": {
      "memory": 1024,
      "maxDuration": 30,
      "runtime": "nodejs22.x"  
    }
  }
}